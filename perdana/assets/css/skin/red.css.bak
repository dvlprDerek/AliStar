  color: #e74c3c !important;
}
blockquote {
  border-left: 5px solid #e74c3c;
}
code {
  color: #e74c3c;
  background-color: #FCE7E4;
}
pre {
  color: #e74c3c;
  background-color: #FCE7E4;
  border: 1px solid #e74c3c;
}
.btn {
  background: #ffffff;
  color: #e74c3c;
  border: 1px solid #e74c3c;
}
.btn:hover {
  background: #e74c3c;
  color: #ffffff;
  border-color: #e74c3c;
}
.btn:active,

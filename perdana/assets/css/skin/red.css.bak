}
.widget-share ul > li a:hover {
  color: #e74c3c;
}
.widget-tag a {
  background: transparent;
  color: #e74c3c;
  border: 1px solid #e74c3c;
}
.widget-tag a:hover {
  background: #e74c3c;
  color: #ffffff;
  border-color: #e74c3c;
}
.widget-tag a:active,
.widget-tag a.active {
  background-color: #e74c3c;
  color: #ffffff !important;
}
.widget-tag a:hover {
  background: #e74c3c;
  border-color: #e74c3c;
